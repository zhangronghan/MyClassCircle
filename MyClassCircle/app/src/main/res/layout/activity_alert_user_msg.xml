<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.example.jia.classcircle.activity.activity.AlertUserMsgActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_alert_return"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#3399FF"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:title="修改信息"
        app:titleTextColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/alertUserImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="姓名"
                android:textSize="19dp"/>

            <EditText
                android:id="@+id/alert_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp"
                android:background="@null"
                android:gravity="left"
                android:textSize="18dp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="密码"
                android:textSize="19dp"/>

            <EditText
                android:id="@+id/alert_user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp"
                android:background="@null"
                android:gravity="left"
                android:textSize="18dp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="手机"
                android:textSize="19dp"/>

            <EditText
                android:id="@+id/alert_user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp"
                android:background="@null"
                android:gravity="left"
                android:phoneNumber="true"
                android:textSize="18dp"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Button

        android:id="@+id/btn_alert_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/login_button_selector"
        android:text="确认修改"
        android:textColor="#ffffff"
        android:textSize="18sp"/>
</LinearLayout>
