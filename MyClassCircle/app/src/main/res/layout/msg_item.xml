<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="10dp">

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center_vertical">

        <com.example.jia.classcircle.activity.util.ImageViewPlus
            android:id="@+id/youFriend_imageViewPlus"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_launcher"/>


        <TextView
            android:id="@+id/left_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_comment"
            android:gravity="start"
            android:text="A"
            android:layout_marginRight="45dp"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/right_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/send_msg_normal"
            android:text="A"
            android:textColor="#fff"
            android:textSize="16sp"/>


        <com.example.jia.classcircle.activity.util.ImageViewPlus
            android:id="@+id/youSelf_imageViewPlus"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher"/>

    </RelativeLayout>

</LinearLayout>