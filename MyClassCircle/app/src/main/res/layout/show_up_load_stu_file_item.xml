<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_show_for_name"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            android:src="@drawable/file_down_load_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <TextView
            android:id="@+id/tv_stu_userName"
            android:textSize="10dp"
            android:layout_alignRight="@+id/img_show_for_name"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户姓名"
            />
        <TextView
            android:id="@+id/tv_show_up_load_file_from_stu"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="显示文件名"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_checkbox"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_show_up_load_file_system_time"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:textSize="8dp"
        android:text="显示时间"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
